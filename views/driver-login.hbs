<div class="row">
  <div class="offset-sm-3 col-sm-6">
    <form action="/driver-login" method="post">
    <h4 class="mb-3">Đăng nhập tài xế</h4>
      {{#if loginMessage}}
      <div class="mt-3 mb-3 alert alert-danger" role="alert">
        {{loginMessage}}
      </div>
      {{/if}}
      <!-- Email input -->
      <div class="form-outline mb-4">
        <label class="form-label" for="email">Email</label>
        <input type="email" id="email" class="form-control" name="email"/>
      </div>

      <!-- Password input -->
      <div class="form-outline mb-4">
        <label class="form-label" for="password">Mật khẩu</label>
        <input type="password" id="password" class="form-control" name="password"/>
      </div>

      <!-- 2 column grid layout for inline styling -->
      {{!-- <div class="row mb-4">
        <div class="col d-flex justify-content-end">
          <!-- Simple link -->
          <a href="#!">Forgot password?</a>
        </div>
      </div> --}}

      <!-- Submit button -->
      <button type="submit" class="btn btn-primary btn-block mb-4">Đăng nhập</button>

      <!-- Register buttons -->
      <div class="text-center">
        <p>Chưa có tài khoản hả? <a href="#!">Đăng ký tài xế</a></p>
        <p>Không phải là tài xế? <a href="/login">Đăng nhập</a></p>
      </div>
    </form>
  </div>
</div>